zone "." in {
  type hint;
  file "/var/bind/named.cache";
};

zone "localhost" IN {
  type master;
  file "pri/localhost.zone";
  notify no;
};

{% set zones = groups['all'] | groupZones(hostvars) | combine(bindConfig['internal']['zones']) %}
{% for zoneName, zone in zones.iteritems() %}
zone "{{ zoneName }}" {
  type master;
  file "/etc/bind/pri/{{ zoneName }}.zone";
  allow-query { trusted; };
  allow-transfer { xfer; };
};
{% endfor %}
