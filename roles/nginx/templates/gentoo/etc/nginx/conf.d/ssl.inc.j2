ssl_certificate /var/lib/cfssl/{{ inventory_hostname }}.nginx.pem;
ssl_certificate_key /var/lib/cfssl/{{ inventory_hostname }}.key;
ssl_dhparam /var/lib/cfssl/{{ inventory_hostname }}.dh;
ssl_protocols TLSv1.2;
ssl_prefer_server_ciphers on;
ssl_ciphers EECDH+AESGCM:EDH+AESGCM:AES128+EECDH:AES128+EDH;
ssl_session_timeout 5m;
ssl_session_cache shared:SSL:50m;
